		"test": "cynic node x/tests.test.js"
	},
	"keywords": [
		"views",
		"lit",
		"virtual",
		"hooks"
	],
	"dependencies": {
		"es-module-shims": "^1.6.2"
	},
	"peerDependencies": {
		"lit": "^2.4.1"
	},
	"devDependencies": {
		"cynic": "0.1.0-dev.16",
		"http-server": "^14.1.0",
		"importly": "^0.2.0",
		"mkdirp": "^1.0.4",
		"npm-run-all": "^4.1.5",
		"rimraf": "^3.0.2",
		"typescript": "^4.9.3"
	}
}
